type Element {
  id: ID! @unique
  name: String! @unique
  description: String
  schools: [School!]!
}

type School {
  id: ID! @unique
  name: String! @unique
  description: String!
  spells: [Ability!]!
  element: Element!
  type: SchoolType!
}

type Ability {
  id: ID! @unique
  name: String! @unique
  description: String!
  attributes: [Attribute!]!
  tier: TierFormat
  element: Element
  school: School
  type: AbilityType
  costType: CostType
  costAmount: Int
  maintainAmount: Int
  rangeType: RangeType
  rangeAmount: Int
  rangeIncrement: Int
  areaOfEffectType: AreaOfEffectType
  areaOfEffectRadius: Int
  areaOfEffectLine: String
  durationType: DurationType
  durationAmount: String
}

type Attribute {
  id: ID! @unique
  name: String! @unique
  description: String
}

enum SchoolType {
  SPELL
  CHAKRA
  TRADITION
  RUNE
}

enum AbilityType {
  SPELL
  CHAKRA
  FIGHTING_STYLE
  RUNE
  TRADITION
}

enum TierFormat {
  NOVICE
  ADEPT
  EXPERT
  MASTER
}

enum RangeType {
  CASTER
  MELEE
  SPECIAL
  RANGE
  RANGE_INCREMENT
}

enum AreaOfEffectType {
  RADIUS
  SINGLE_TARGET
  SPECIAL
  LINE
  CASTER
}

enum DurationType {
  MAINTAINED
  INSTANT
  MINUTES
  HOURS
  DAYS
  ROUNDS
  VARIABLE
}

enum CostType {
  AP
  TIME
}
